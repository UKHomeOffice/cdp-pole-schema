{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "title": "ABC extension to event to hold booking attributes",
  "version": "0.11",
  "additionalProperties":false,
  "properties": {
    "pnrLocator": {
      "type": "string"
    },
    "masterPNRLocator": {
      "type": "string"
    },
    "splitPNR": {
      "type": "string"
    },
    "travelAgent": {
      "type": "string"
    },
    "bookingDate": {
      "type": "string"
    },
    "creationDate": {
      "type": "string"
    },
    "modifiedDate": {
      "type": "string"
    },
    "retreivedDate": {
      "type": "string"
    },
    "accompaniedByInfant": {
      "type": "string"
    },
    "unaccompaniedMinor": {
      "type": "string"
    },
    "contacts": {
      "type": "array",
      "properties": {
        "contactType": {
          "type": "string"
        },
        "contactText": {
          "type": "string"
        },
        "pnrPassengerRef": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "countryCode": {
          "type": "string"
        }
      }
    },
    "itinerary": {
      "type": "array",
      "properties": {
        "flightcode": {
          "type": "string"
        },
        "classOfTravel": {
          "type": "string"
        },
        "departureDate": {
          "type": "string"
        },
        "departureTime": {
          "type": "string"
        },
        "departureAirport": {
          "type": "string"
        },
        "arrivalDate": {
          "type": "string"
        },
        "arrivalTime": {
          "type": "string"
        },
        "arrivalAirport": {
          "type": "string"
        },
        "statusCode": {
          "type": "string"
        },
        "numInParty": {
          "type": "integer"
        },
        "dateChanged": {
          "type": "string"
        },
        "segmentStatus": {
          "type": "string"
        },
        "sectorStatus": {
          "type": "string"
        },
        "pnrItinerarySeq": {
          "type": "string"
        },
        "operatingCarrierCode": {
          "type": "string"
        },
        "operatingFlightCode": {
          "type": "string"
        },
        "itineraryPnrLocator": {
          "type": "string"
        },
        "pnrLocatorType": {
          "type": "string"
        },
        "bookingDate": {
          "type": "string"
        }
      }
    },
    "tickets": {
      "type": "array",
      "properties": {
        "ticketNumber": {
          "type": "string"
        },
        "ticketIssueDate": {
          "type": "string"
        },
        "priceType": {
          "type": "string"
        },
        "currencyCode": {
          "type": "string"
        },
        "price": {
          "type": "string"
        }
      }
    },
    "formOfPayment": {
      "type": "array",
      "properties": {
        "paymentType": {
          "type": "string"
        },
        "paymentData": {
          "type": "string"
        },
        "paymentAmount": {
          "type": "string"
        },
        "cardNumber": {
          "type": "string"
        },
        "cardExpiryDate": {
          "type": "string"
        },
        "vendorCode": {
          "type": "string"
        }
      }
    },
    "portOfDisembark": {
      "type": "string"
    },
    "portOfEmbark": {
      "type": "string"
    },
    "travelAgentCityCode": {
      "type": "string"
    },
    "travelAgentType": {
      "type": "string"
    },
    "travelAgentCountryCode": {
      "type": "string"
    },
    "excessBaggage": {
      "type": "array",
      "properties": {
        "currencyCode": {
          "type": "string"
        },
        "monetaryAmount": {
          "type": "string"
        },
        "allowanceOrChargeQualifier": {
          "type": "string"
        },
        "measurementUnitQualifier": {
          "type": "string"
        },
        "totalNumberOfItems": {
          "type": "string"
        }
      }
    },
    "splitPnrData": {
      "type": "object",
      "properties": {
        "bookingDate": {
          "type": "string"
        },
        "carrierCode": {
          "type": "string"
        },
        "reservationControlType": {
          "type": "string"
        },
        "numberPassengersSplit": {
          "type": "string"
        }
      }
    },
    "bookingIndicators": {
      "type": "object",
      "description": "Set of ABC calculated indicators",
      "properties": {
        "bookingIntentHours": {
          "type": "integer"
        },
        "inboundOutbound": {
          "type": "string"
        },
        "numberOfBaggageItems": {
          "type": "integer"
        },
        "returnJourney": {
          "type": "boolean"
        }
      }
    }
  }
}
